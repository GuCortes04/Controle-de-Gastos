# Configurações do Sistema de Controle de Gastos

# Configurações do Banco de Dados
DATABASE_URL=sqlite:///database/controle_gastos.db
DATABASE_BACKUP_INTERVAL=24  # horas

# Configurações do Flask
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=sua-chave-secreta-super-segura-aqui-mude-em-producao

# Configurações de Machine Learning
ML_MIN_DATA_POINTS=4  # Mínimo de meses para treinar modelo
ML_CONFIDENCE_THRESHOLD=0.6  # Threshold para classificação automática
ML_MODEL_RETRAIN_INTERVAL=7  # dias

# Configurações de Cache
CACHE_TIMEOUT=300  # 5 minutos
ENABLE_CACHE=True

# Configurações de Logging
LOG_LEVEL=INFO
LOG_FILE=logs/controle_gastos.log
ENABLE_SQL_LOGGING=False

# Configurações de Performance
MAX_TRANSACTIONS_PER_PAGE=50
MAX_CHART_DATA_POINTS=100

# Configurações de Backup
AUTO_BACKUP=True
BACKUP_RETENTION_DAYS=30